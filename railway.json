{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bundle install && rails assets:precompile"
  },
  "deploy": {
    "startCommand": "bundle exec rails server -p $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  }
}
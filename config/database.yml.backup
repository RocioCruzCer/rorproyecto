production:
  adapter: postgresql
  encoding: unicode
  # Esto es m√°s compatible
  <% if ENV['DATABASE_URL'] %>
    url: <%= ENV['DATABASE_URL'] %>
  <% else %>
    host: <%= ENV['DB_HOST'] || 'localhost' %>
    port: <%= ENV['DB_PORT'] || 5432 %>
    database: <%= ENV['DB_NAME'] || 'rorproyecto_production' %>
    username: <%= ENV['DB_USERNAME'] || 'rorproyecto_user' %>
    password: <%= ENV['DB_PASSWORD'] || '95BMwtcucDuZvWTdeiR7wKkxRH4jKDXL' %>
  <% end %>
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  timeout: 5000
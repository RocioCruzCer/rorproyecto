<%# app/views/welcome/questionnaire_list.html.erb %>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2">
        <i class="bi bi-clipboard-data text-primary"></i> Respuestas del Cuestionario
      </h1>
      <p class="text-muted">Total: <strong><%= @questionnaires.count %></strong> registro(s)</p>
    </div>
    <div>
      <%= link_to questionnaire_path, class: 'btn btn-primary' do %>
        <i class="bi bi-plus-circle"></i> Nuevo Cuestionario
      <% end %>
      <%= link_to root_path, class: 'btn btn-outline-secondary' do %>
        <i class="bi bi-house"></i> Inicio
      <% end %>
    </div>
  </div>
  
  <div class="card shadow">
    <div class="card-header bg-light">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Registros almacenados</h5>
        <div class="btn-group" role="group">
          <button id="refreshBtn" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-arrow-clockwise"></i> Actualizar
          </button>
          <button id="exportBtn" class="btn btn-sm btn-outline-success">
            <i class="bi bi-download"></i> Exportar
          </button>
        </div>
      </div>
    </div>
    <div class="card-body">
      <% if @questionnaires.any? %>
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead class="table-primary">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Email</th>
                <th scope="col">Fecha de registro</th>
                <th scope="col">ID</th>
              </tr>
            </thead>
            <tbody id="questionnairesTableBody">
              <% @questionnaires.each_with_index do |q, index| %>
                <tr class="fade-in">
                  <th scope="row"><%= index + 1 %></th>
                  <td><strong><%= q.name %></strong></td>
                  <td>
                    <a href="mailto:<%= q.email %>" class="text-decoration-none">
                      <%= q.email %>
                    </a>
                  </td>
                  <td>
                    <small class="text-muted">
                      <%= q.created_at.strftime("%d/%m/%Y %H:%M") %>
                    </small>
                  </td>
                  <td>
                    <code class="text-muted"><%= q.id %></code>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <!-- Versión para móviles -->
        <div id="mobileList" class="d-none">
          <% @questionnaires.each do |q| %>
            <div class="card mb-2">
              <div class="card-body">
                <h6 class="card-title"><strong><%= q.name %></strong></h6>
                <p class="card-text mb-1">
                  <i class="bi bi-envelope"></i> 
                  <a href="mailto:<%= q.email %>"><%= q.email %></a>
                </p>
                <p class="card-text">
                  <small class="text-muted">
                    <i class="bi bi-calendar"></i> 
                    <%= q.created_at.strftime("%d/%m/%Y %H:%M") %>
                  </small>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <div class="mb-3">
            <i class="bi bi-clipboard-x display-1 text-muted"></i>
          </div>
          <h4 class="text-muted">No hay cuestionarios guardados</h4>
          <p class="text-muted">Aún no se han registrado respuestas en el cuestionario.</p>
          <%= link_to 'Ir al formulario', questionnaire_path, class: 'btn btn-primary mt-3' %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <div class="row">
        <div class="col-md-6">
          <small>
            <i class="bi bi-database"></i> 
            Datos almacenados en PostgreSQL
          </small>
        </div>
        <div class="col-md-6 text-end">
          <small>
            Actualizado: <%= Time.now.strftime("%d/%m/%Y %H:%M:%S") %>
          </small>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Modal de exportación -->
  <div class="modal fade" id="exportModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title">
            <i class="bi bi-download"></i> Exportar Datos
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Selecciona el formato de exportación:</p>
          <div class="d-grid gap-2">
            <button id="exportJSON" class="btn btn-outline-primary">
              <i class="bi bi-code-slash"></i> JSON
            </button>
            <button id="exportCSV" class="btn btn-outline-success">
              <i class="bi bi-filetype-csv"></i> CSV
            </button>
          </div>
          <div id="exportResult" class="mt-3"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'questionnaire_list' %>
<div class="system-info-container">
  <div class="system-info-card">
    <div class="info-header">
      <div class="info-icon">
        <i class="fas fa-server"></i>
      </div>
      <h1 class="info-title">
        Información del Sistema
      </h1>
      <p class="info-subtitle">
        Estado y configuración técnica del sistema
      </p>
    </div>
    
    <!-- Botón para ir a nueva pantalla -->
    <div class="action-buttons">
      <%= link_to advanced_dashboard_path, class: "action-button primary" do %>
        <i class="fas fa-chart-line"></i> Ver Dashboard Avanzado
      <% end %>
    </div>
    
    <!-- Información fundamental del sistema -->
    <div class="info-sections">
      <!-- Sección de Estado del Sistema -->
      <div class="info-section">
        <h3 class="section-title">
          <i class="fas fa-heartbeat"></i> Estado del Sistema
        </h3>
        <div class="section-grid">
          <div class="info-item">
            <div class="info-label">Ambiente</div>
            <div class="info-value">
              <i class="fas fa-cogs" style="color: var(--rosa-clarito);"></i> <%= Rails.env.capitalize %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Versión Ruby</div>
            <div class="info-value">
              <i class="fab fa-ruby" style="color: var(--rosa-clarito);"></i> <%= RUBY_VERSION %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Versión Rails</div>
            <div class="info-value">
              <i class="fas fa-code" style="color: var(--rosa-clarito);"></i> <%= Rails.version %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Tiempo Servidor</div>
            <div class="info-value" id="serverTime">
              <i class="fas fa-clock" style="color: var(--rosa-clarito);"></i> <%= Time.current.strftime("%H:%M:%S") %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sección de Base de Datos -->
      <div class="info-section">
        <h3 class="section-title">
          <i class="fas fa-database"></i> Base de Datos
        </h3>
        <div class="section-grid">
          <div class="info-item">
            <div class="info-label">Motor</div>
            <div class="info-value">
              <i class="fas fa-database" style="color: var(--rosa-clarito);"></i> SQLite3
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Registros Clicks</div>
            <div class="info-value">
              <i class="fas fa-mouse-pointer" style="color: var(--rosa-clarito);"></i> 
              <% begin %>
                <%= number_with_delimiter(Click.count) %>
              <% rescue => e %>
                0
              <% end %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Estado</div>
            <div class="info-value healthy">
              <i class="fas fa-check-circle" style="color: var(--verde-primario);"></i> 
              <% begin %>
                <% ActiveRecord::Base.connection.execute("SELECT 1") %>
                Operativa
              <% rescue => e %>
                Error
              <% end %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Conexión</div>
            <div class="info-value connected">
              <i class="fas fa-plug" style="color: var(--verde-primario);"></i> Activa
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sección de Seguridad -->
      <div class="info-section">
        <h3 class="section-title">
          <i class="fas fa-shield-alt"></i> Seguridad
        </h3>
        <div class="section-grid">
          <div class="info-item">
            <div class="info-label">reCAPTCHA</div>
            <div class="info-value">
              <i class="fas fa-shield-check" style="color: var(--rosa-clarito);"></i> Modo Test
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">CSP</div>
            <div class="info-value">
              <i class="fas fa-lock" style="color: var(--rosa-clarito);"></i> Habilitado
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">CSRF</div>
            <div class="info-value">
              <i class="fas fa-user-shield" style="color: var(--rosa-clarito);"></i> Protegido
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">SSL/HTTPS</div>
            <div class="info-value">
              <i class="fas fa-lock" style="color: var(--rosa-clarito);"></i> <%= request.ssl? ? "Sí" : "No (Dev)" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
</div>


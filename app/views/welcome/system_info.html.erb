<div class="system-info-container">
  <div class="system-info-card">
    <div class="info-header">
      <div class="info-icon">
        <i class="fas fa-server"></i>
      </div>
      <h1 class="info-title">
        Información del Sistema
      </h1>
      <p class="info-subtitle">
        Estado y configuración técnica del sistema
      </p>
    </div>
    
    <!-- Botón para ir a nueva pantalla -->
    <div class="action-buttons">
      <%= link_to advanced_dashboard_path, class: "action-button primary" do %>
        <i class="fas fa-chart-line"></i> Ver Dashboard Avanzado
      <% end %>
    </div>
    
    <!-- Carrusel de imágenes de programación -->
    <div class="carousel-section">
      <h3 class="section-title">
        <i class="fas fa-images"></i> Tecnologías del Sistema
      </h3>
      <div class="carousel-container">
        <div class="carousel-slides" id="carouselSlides">
          <div class="carousel-slide active">
            <div class="slide-content">
              <div class="slide-text">
                <h4>Ruby on Rails</h4>
                <p>Framework backend versión <%= Rails.version %></p>
                <div class="tech-tags">
                  <span class="tech-tag">MVC</span>
                  <span class="tech-tag">REST API</span>
                  <span class="tech-tag">ActiveRecord</span>
                </div>
              </div>
              <img src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Código Ruby on Rails">
            </div>
          </div>
          <div class="carousel-slide">
            <div class="slide-content">
              <div class="slide-text">
                <h4>Base de Datos</h4>
                <p>SQLite - Motor de base de datos ligero</p>
                <div class="tech-tags">
                  <span class="tech-tag">SQL</span>
                  <span class="tech-tag">Transacciones</span>
                  <span class="tech-tag">ACID</span>
                </div>
              </div>
              <img src="https://images.unsplash.com/photo-1551650975-87deedd944c3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Base de datos SQLite">
            </div>
          </div>
          <div class="carousel-slide">
            <div class="slide-content">
              <div class="slide-text">
                <h4>Frontend Moderno</h4>
                <p>HTML5, CSS3, JavaScript ES6+</p>
                <div class="tech-tags">
                  <span class="tech-tag">Responsive</span>
                  <span class="tech-tag">Animaciones</span>
                  <span class="tech-tag">Interactivo</span>
                </div>
              </div>
              <img src="https://images.unsplash.com/photo-1542831371-29b0f74f9713?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="HTML, CSS y JavaScript">
            </div>
          </div>
          <div class="carousel-slide">
            <div class="slide-content">
              <div class="slide-text">
                <h4>Seguridad</h4>
                <p>reCAPTCHA, CSP, CSRF Protection</p>
                <div class="tech-tags">
                  <span class="tech-tag">Autenticación</span>
                  <span class="tech-tag">Encriptación</span>
                  <span class="tech-tag">Protección</span>
                </div>
              </div>
              <img src="https://images.unsplash.com/photo-1558494949-ef010cbdcc31?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Seguridad y protección">
            </div>
          </div>
        </div>
        
        <div class="carousel-controls">
          <button class="carousel-btn prev" onclick="prevSlide()">
            <i class="fas fa-chevron-left"></i>
          </button>
          <div class="carousel-dots" id="carouselDots"></div>
          <button class="carousel-btn next" onclick="nextSlide()">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Información fundamental del sistema -->
    <div class="info-sections">
      <!-- Sección de Estado del Sistema -->
      <div class="info-section">
        <h3 class="section-title">
          <i class="fas fa-heartbeat"></i> Estado del Sistema
        </h3>
        <div class="section-grid">
          <div class="info-item">
            <div class="info-label">Ambiente</div>
            <div class="info-value">
              <i class="fas fa-cogs"></i> <%= Rails.env.capitalize %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Versión Ruby</div>
            <div class="info-value">
              <i class="fab fa-ruby"></i> <%= RUBY_VERSION %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Versión Rails</div>
            <div class="info-value">
              <i class="fas fa-code"></i> <%= Rails.version %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Tiempo Servidor</div>
            <div class="info-value" id="serverTime">
              <i class="fas fa-clock"></i> <%= Time.current.strftime("%H:%M:%S") %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sección de Base de Datos -->
      <div class="info-section">
        <h3 class="section-title">
          <i class="fas fa-database"></i> Base de Datos
        </h3>
        <div class="section-grid">
          <div class="info-item">
            <div class="info-label">Motor</div>
            <div class="info-value">
              <i class="fas fa-database"></i> SQLite3
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Registros Clicks</div>
            <div class="info-value">
              <i class="fas fa-mouse-pointer"></i> 
              <% begin %>
                <%= number_with_delimiter(Click.count) %>
              <% rescue => e %>
                0
              <% end %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Estado</div>
            <div class="info-value healthy">
              <i class="fas fa-check-circle"></i> 
              <% begin %>
                <% ActiveRecord::Base.connection.execute("SELECT 1") %>
                Operativa
              <% rescue => e %>
                Error
              <% end %>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">Conexión</div>
            <div class="info-value connected">
              <i class="fas fa-plug"></i> Activa
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sección de Seguridad -->
      <div class="info-section">
        <h3 class="section-title">
          <i class="fas fa-shield-alt"></i> Seguridad
        </h3>
        <div class="section-grid">
          <div class="info-item">
            <div class="info-label">reCAPTCHA</div>
            <div class="info-value">
              <i class="fas fa-shield-check"></i> Modo Test
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">CSP</div>
            <div class="info-value">
              <i class="fas fa-lock"></i> Habilitado
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">CSRF</div>
            <div class="info-value">
              <i class="fas fa-user-shield"></i> Protegido
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-label">SSL/HTTPS</div>
            <div class="info-value">
              <i class="fas fa-lock"></i> <%= request.ssl? ? "Sí" : "No (Dev)" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Botones de acción -->
    <div class="action-buttons">
      <%= link_to advanced_dashboard_path, class: "action-button primary" do %>
        <i class="fas fa-chart-line"></i> Ver Dashboard Avanzado
      <% end %>
      
      <%= link_to root_path, class: "action-button secondary" do %>
        <i class="fas fa-arrow-left"></i> Volver al Inicio
      <% end %>
    </div>
  </div>
</div>


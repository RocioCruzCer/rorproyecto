<script>
  // Carrusel JavaScript Mejorado
  let currentSlide = 0;
  const totalSlides = 4;
  let autoCarouselInterval;
  
  function updateCarousel() {
    const slides = document.getElementById('carouselSlides');
    const dots = document.querySelectorAll('.carousel-dot');
    
    // Actualizar posición del carrusel con animación suave
    slides.style.transform = `translateX(-${currentSlide * 25}%)`;
    
    // Actualizar slides activos
    document.querySelectorAll('.carousel-slide').forEach((slide, index) => {
      slide.classList.toggle('active', index === currentSlide);
    });
    
    // Actualizar puntos
    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentSlide);
    });
  }
  
  function nextSlide() {
    currentSlide = (currentSlide + 1) % totalSlides;
    updateCarousel();
    resetAutoCarousel();
  }
  
  function prevSlide() {
    currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
    updateCarousel();
    resetAutoCarousel();
  }
  
  function goToSlide(index) {
    currentSlide = index;
    updateCarousel();
    resetAutoCarousel();
  }
  
  function resetAutoCarousel() {
    clearInterval(autoCarouselInterval);
    startAutoCarousel();
  }
  
  // Crear puntos del carrusel
  function createCarouselDots() {
    const dotsContainer = document.getElementById('carouselDots');
    dotsContainer.innerHTML = ''; // Limpiar existentes
    for (let i = 0; i < totalSlides; i++) {
      const dot = document.createElement('div');
      dot.className = `carousel-dot ${i === 0 ? 'active' : ''}`;
      dot.onclick = () => goToSlide(i);
      dotsContainer.appendChild(dot);
    }
  }
  
  // Auto-carrusel cada 5 segundos
  function startAutoCarousel() {
    autoCarouselInterval = setInterval(nextSlide, 5000);
  }
  
  // Actualizar hora del servidor en tiempo real
  function updateServerTime() {
    const serverTimeElement = document.getElementById('serverTime');
    if (serverTimeElement) {
      const now = new Date();
      const timeString = now.toLocaleTimeString('es-ES', {
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit'
      });
      serverTimeElement.innerHTML = `<i class="fas fa-clock"></i> ${timeString}`;
    }
  }
  
  // Efecto de entrada para los elementos
  function animateOnScroll() {
    const sections = document.querySelectorAll('.info-section');
    sections.forEach((section, index) => {
      const sectionTop = section.getBoundingClientRect().top;
      const windowHeight = window.innerHeight;
      
      if (sectionTop < windowHeight * 0.8) {
        section.style.opacity = '1';
        section.style.transform = 'translateY(0)';
      }
    });
  }
  
  // Inicializar todo
  document.addEventListener('DOMContentLoaded', () => {
    // Crear puntos del carrusel
    createCarouselDots();
    
    // Iniciar carrusel automático
    startAutoCarousel();
    
    // Actualizar hora del servidor
    updateServerTime();
    setInterval(updateServerTime, 1000);
    
    // Configurar animaciones de entrada
    const sections = document.querySelectorAll('.info-section');
    sections.forEach(section => {
      section.style.opacity = '0';
      section.style.transform = 'translateY(20px)';
      section.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
    });
    
    setTimeout(() => {
      animateOnScroll();
      window.addEventListener('scroll', animateOnScroll);
    }, 100);
    
    // Actualizar breadcrumb
    updateBreadcrumb('Información del Sistema', 'fa-server');
  });
</script>
<div class="home-container">
  <div class="hero-section">
    <div class="welcome-card">
      <div class="welcome-icon">
        <i class="fas fa-hand-peace"></i>
      </div>
      <h1 class="welcome-title">
        ¡Hola <span class="highlight">Usuario :)</span>!
      </h1>
      <p class="welcome-subtitle">
        Bienvenido al Sistema de Interacciones
      </p>
      
      <div class="instructions">
        <div class="instruction-step">
          <span class="step-number">1</span>
          <p>Abre el menú en la esquina superior izquierda</p>
        </div>
        <div class="instruction-step">
          <span class="step-number">2</span>
          <p>Selecciona "Interacción con DB" para registrar tus clicks</p>
        </div>
        <div class="instruction-step">
          <span class="step-number">3</span>
          <p>Selecciona "Pantalla de Error" para ver la simulación de un error</p>
        </div>
        <div class="instruction-step">
          <span class="step-number">4</span>
          <p>Selecciona "Información del Sistema" para ver detalles técnicos</p>
        </div>
      </div>
      
      <!-- Botón para ver información del sistema -->
      <div class="quick-actions">
        <%= link_to system_info_path, class: "action-button primary" do %>
          <i class="fas fa-info-circle"></i> Ver Información del Sistema
        <% end %>
      </div>

    </div>
  </div>
</div>

<style>
  .home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .hero-section {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 300px);
  }
  
  .welcome-card {
    background: linear-gradient(135deg, #FFFFFF 0%, #FAF5E9 100%);
    border-radius: 24px;
    padding: 50px 40px;
    text-align: center;
    box-shadow: 0 20px 60px rgba(11, 93, 59, 0.1);
    border: 1px solid #E4DDC9;
    max-width: 700px;
    width: 100%;
  }
  
  .welcome-icon {
    font-size: 80px;
    color: #0B5D3B;
    margin-bottom: 25px;
    animation: bounce 2s infinite;
  }
  
  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  .welcome-title {
    color: #2F2F2A;
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.2;
  }
  
  .welcome-title .highlight {
    color: #0B5D3B;
    position: relative;
    display: inline-block;
  }
  
  .welcome-title .highlight::after {
    content: '';
    position: absolute;
    bottom: 5px;
    left: 0;
    width: 100%;
    height: 8px;
    background-color: rgba(224, 177, 0, 0.3);
    z-index: -1;
    border-radius: 4px;
  }
  
  .welcome-subtitle {
    color: #6F8F7A;
    font-size: 20px;
    margin-bottom: 40px;
    font-weight: 500;
  }
  
  .instructions {
    background-color: #E4DDC9;
    border-radius: 16px;
    padding: 30px;
    margin-bottom: 40px;
  }
  
  .instruction-step {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
    padding: 15px;
    background-color: #FAF5E9;
    border-radius: 12px;
    border-left: 4px solid #0B5D3B;
  }
  
  .instruction-step:last-child {
    margin-bottom: 0;
  }
  
  .step-number {
    background-color: #0B5D3B;
    color: #FAF5E9;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 18px;
    flex-shrink: 0;
  }
  
  .instruction-step p {
    color: #2F2F2A;
    font-size: 16px;
    margin: 0;
    text-align: left;
    flex: 1;
  }
  
  .quick-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 30px;
  }
  
  .action-button {
    padding: 16px 30px;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 12px;
    min-width: 200px;
    justify-content: center;
    text-decoration: none;
  }
  
  .action-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }
  
  .action-button.primary {
    background: linear-gradient(135deg, #0B5D3B 0%, #1A7D55 100%);
    color: #FAF5E9;
  }
  
  .action-button.primary:hover {
    box-shadow: 0 10px 25px rgba(11, 93, 59, 0.3);
  }
  
  .action-button.secondary {
    background-color: #6F8F7A;
    color: #FAF5E9;
  }
  
  .action-button.secondary:hover {
    box-shadow: 0 10px 25px rgba(111, 143, 122, 0.3);
  }
  
  @media (max-width: 768px) {
    .welcome-card {
      padding: 30px 20px;
    }
    
    .welcome-title {
      font-size: 36px;
    }
    
    .welcome-subtitle {
      font-size: 18px;
    }
    
    .instruction-step {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }
    
    .instruction-step p {
      text-align: center;
    }
    
    .quick-actions {
      flex-direction: column;
    }
    
    .action-button {
      width: 100%;
      min-width: auto;
    }
  }
  
  @media (max-width: 480px) {
    .welcome-title {
      font-size: 32px;
    }
    
    .welcome-icon {
      font-size: 60px;
    }
    
    .action-button {
      padding: 14px 20px;
      font-size: 15px;
    }
  }
</style>

<script>
  // Actualizar breadcrumb específico para esta página
  document.addEventListener('DOMContentLoaded', () => {
    updateBreadcrumb('Página de Inicio', 'fa-home');
  });
</script>
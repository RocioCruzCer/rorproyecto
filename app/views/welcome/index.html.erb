<script>
  document.addEventListener('DOMContentLoaded', () => {
    const pupils = document.querySelectorAll('.pupil-left, .pupil-right');
    const eyes = document.querySelectorAll('.eye-left, .eye-right');
    const robot = document.getElementById('robot3D');
    
    // L칤mites de movimiento para las pupilas
    const maxMove = 8;
    
    // Seguimiento del cursor con los ojos
    document.addEventListener('mousemove', (e) => {
      const mouseX = e.clientX;
      const mouseY = e.clientY;
      
      pupils.forEach((pupil, index) => {
        const eye = eyes[index];
        const eyeRect = eye.getBoundingClientRect();
        const eyeCenterX = eyeRect.left + eyeRect.width / 2;
        const eyeCenterY = eyeRect.top + eyeRect.height / 2;
        
        // Calcular direcci칩n hacia el cursor
        let deltaX = mouseX - eyeCenterX;
        let deltaY = mouseY - eyeCenterY;
        
        // Limitar la distancia de movimiento
        const distance = Math.sqrt(deltaX * deltaX + deltaY * deltaY);
        const maxDistance = 100;
        
        if (distance > maxDistance) {
          deltaX = (deltaX / distance) * maxDistance;
          deltaY = (deltaY / distance) * maxDistance;
        }
        
        // Convertir a porcentaje de movimiento (limitado)
        const moveX = (deltaX / maxDistance) * maxMove;
        const moveY = (deltaY / maxDistance) * maxMove;
        
        // Aplicar movimiento limitado
        pupil.style.transform = `translate(calc(-50% + ${moveX}px), calc(-50% + ${moveY}px))`;
      });
    });
    
    // Efecto 3D del robot que sigue el mouse
    document.addEventListener('mousemove', (e) => {
      const mouseX = e.clientX / window.innerWidth;
      const mouseY = e.clientY / window.innerHeight;
      
      const rotateY = (mouseX - 0.5) * 20;
      const rotateX = (mouseY - 0.5) * 10;
      
      robot.style.transform = `perspective(1000px) rotateY(${rotateY}deg) rotateX(${rotateX}deg) translateY(-10px)`;
    });
    
    // Resetear posici칩n cuando el mouse sale de la ventana
    document.addEventListener('mouseleave', () => {
      pupils.forEach(pupil => {
        pupil.style.transform = 'translate(-50%, -50%)';
      });
      robot.style.transform = 'perspective(1000px) rotateY(0deg) rotateX(0deg) translateY(-10px)';
    });
    
    // Peque침a animaci칩n de parpadeo ocasional
    setInterval(() => {
      pupils.forEach(pupil => {
        pupil.style.transform = 'scale(1)';
      });
      
      setTimeout(() => {
        pupils.forEach(pupil => {
          pupil.style.transform = 'scale(1)';
        });
      }, 200);
    }, 5000);
  });
</script>